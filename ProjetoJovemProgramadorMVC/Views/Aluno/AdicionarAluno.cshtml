
@model Aluno


<form asp-controller="Aluno" asp-action="InserirAluno" method="post"> 
    @* caminho para onde o formulario deve ir *@ 

    <div class="form-container">
        <h2>Cadastro de Aluno</h2>
        <form>
            <div class="form-group">
                <label for="matricula">Matrícula</label>
                <input type="text" asp-for="Matricula" nid="matricula" name="matricula" required>
            </div>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" asp-for="Nome" id="nome" name="nome" required>
            </div>
            <div class="form-group">
                <label for="cpf">CPF</label>
                <input type="text" asp-for="Cpf" id="cpf" name="cpf" required>
            </div>
            <div class="form-group">
                <label for="idade">Idade</label>
                <input type="number" asp-for="Idade" id="idade" name="idade" required>
            </div>
            <div class="btn-enviar">
                <button type="submit">Enviar</button>
            </div>
        </form>
    </div>
</form>
